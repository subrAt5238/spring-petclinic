pipeline {
    agent {label 'JDK-11-MVN-PIP-NPM'}
	triggers{
	      pollSCM('* * * * *') 
	}
	
    stages {
        stage ('source code  from git remote repository') {
            steps {
               git url: 'https://github.com/subrAt5238/spring-petclinic.git',
                branch: 'parameter'
            }
        }
        stage('To build maven package') {
            steps {
                sh 'mvn clean package'
            }
        }
		 stage ('Artifactory configuration') {
            steps {               
				rtMavenDeployer (
                    id: "MAVEN_DEPLOYER",
                    serverId:    "subrat_jfrog",
                    releaseRepo:  "subrat-libs-release-local",
                    snapshotRepo: "subrat-libs-snapshot-local"
                )

            }
        }

        stage ('Exec Maven') {
            steps {
                rtMavenRun (
                    tool:  "MVN-3.6.3",
                    pom:   "pom.xml",
                    goals: "clean install",
                    deployerId: "MAVEN_DEPLOYER",
                )
            }
        }

        stage ('Publish build info') {
            steps {
                rtPublishBuildInfo (
                    serverId: "subrat_jfrog"
                )
            }
        }
    }
	 
}
